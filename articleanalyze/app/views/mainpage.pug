extends layout

block content
    body
        div.part_header Welcome to WikiLatic
        //- h1 Welcome to wikimedia
        #login_form
            center
                h5(class="indigo-text") Please, login into your account
                .container
                    div(class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;")
                        div(class='row')
                            div(class='col s12')
                        div(class='row')
                            //- div(class='input-field col s2')
                            //-     i(class="material-icons") add                               
                            div(class='input-field col s12') 
                                //- i(class="material-icons", id='icon') add 
                                input(class='validate' type='text' name='username' id='username')
                                label(for='username') Enter your username
                        div(class='row')
                            div(class='input-field col s12')
                                input(class='validate' type='password' name='password' id='password')
                                label(for='password') Enter your password
                        br
                        center
                            .row
                                button(type='button' name='bt_login' class='col s12 btn btn-large waves-effect indigo' id='login') Login
                            a#register Do not have an account?
        #register_form
            center
                h5(class="indigo-text") Please fill in the sheet
                .container
                    div(class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;")
                        div(class='row')
                            div(class='col s12')
                        div(class='row')
                            div(class='input-field col s6')
                                input(class='validate' type='text' name='first_name' id='first_name')
                                label(for='first_name') Enter your firstname            
                            div(class='input-field col s6')
                                input(class='validate' type='text' name='last_name' id='last_name')
                                label(for='last_name') Enter your lastname
                        div(class='row')
                            div(class='input-field col s6')
                                input(class='validate' type='email' name='email_address' id='email_address')
                                label(for='email_address') Enter your email address
                            div(class='input-field col s6')
                                input(class='validate' type='text' name='re_username' id='re_username')
                                label(for='re_username') Enter your username
                        div(class='row')
                            div(class='input-field col s6')
                                input(class='validate' type='password' name='re_password' id='re_password')
                                label(for='re_password') Enter your password
                            div(class='input-field col s6')
                                input(class='validate' type='password' name='confirm_password' id='confirm_password')
                                label(for='re_password') Confirm your password
                        br
                        center
                            .row
                                button(type='button' name='submit' class='col s12 btn btn-large waves-effect indigo' id='submit') Submit
                            a#return Return the login page



              
   
